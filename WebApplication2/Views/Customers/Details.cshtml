@model VidlyII.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Membership type: @Model.MembershipType.Name</li>
    @if (Model.Birthdate != null)
    {
        int month = @Model.Birthdate.Value.Month;
        int day = @Model.Birthdate.Value.Day;
        int year = @Model.Birthdate.Value.Year;
        <li>Birthdate: @month/@day/@year </li>
    }
</ul>

